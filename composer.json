{
    "name": "opine/helper",
    "type": "library",
    "description": "Helper callacks for Handlebars.php",
    "keywords": [
        "Handlebars"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"               : ">=5.5.0",
        "opine/lightncandy" : "dev-master",
        "opine/imageresizer": "dev-master",
        "opine/db"          : "dev-master",
        "opine/container"   : "dev-master",
        "opine/config"      : "dev-master",
        "opine/interfaces"  : "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.32"
    },
    "autoload": {
        "psr-4": {
            "Opine\\Helper\\": "src/"
        },
        "classmap": [
            "src/Helper/app/helpers"
        ]
    }
}